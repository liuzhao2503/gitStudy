.weui-uploader__img {
    display: block;
    width: 202rpx;
    height: 151rpx;
}

.weui-uploader__file {
    float: left;
    border: 1px dashed #c5c5c5;
    margin-right: 9px;
    margin-bottom: 9px;
}

.weui-uploader__input {
    text-align: center;
    position: absolute;
    z-index: 1;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    opacity: 1;
}
.settled_content_bottom{
    padding-top: 26rpx;
    font-size: 22rpx;
    line-height: 22rpx;
    color: #ee2e64;
}

.settled_bottom{
    width: 100%;
    margin: 99rpx 0 0;
    padding-bottom: 57rpx;
}
.settled_bottom button{
    width: 90%;
    background: #ff740e;
    color: #fff;
    border-radius: 27rpx;
}