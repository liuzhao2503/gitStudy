/* pages/Settled/Settled.wxss */

.settled_top {
    text-align: center;
    font-size: 24rpx;
    line-height: 24rpx;
    padding: 15rpx 0 20rpx;
    color: #c5c5c5;
}

.settled_content_a {
    margin-bottom: 2rpx;
    padding: 0 37rpx;
    background: #fff;
    height: 96rpx;
    line-height: 96rpx;
}

.settled_content_a .settled_content_name {
    font-size: 26rpx;
    color: #ababab;
    float: left;
}

.settled_content_a .settled_content_input {
    font-size: 26rpx;
    color: #595959;
    display: block;
    padding-left: 135rpx;
}

.settled_content_a input {
    height: 96rpx;
    font-size: 26rpx;
    color: #595959;
    line-height: 96rpx;
    display: block;
}

.settled_content_input_time {
    display: inline-block;
}

.settled_content_a .picker {
    font-size: 26rpx;
    color: #666;
}

.settled_content_a .picker view {
    margin-left: 10rpx;
    border: 1px solid #d6d6d6;
    display: inline-block;
    vertical-align: middle;
    text-align: center;
    width: 170rpx;
    height: 50rpx;
    line-height: 50rpx;
}

.settled_content_a .picker view image {
    float: right;
    margin-top: 20rpx;
    margin-right: 12rpx;
    width: 21rpx;
    height: 12rpx;
}

.settled_content_b {
    margin-top: 2rpx;
    margin-bottom: 2rpx;
    padding: 0 37rpx 38rpx;
    line-height: 26rpx;
    background: #fff;
    /* height: 96rpx;
    line-height: 96rpx; */
}

.settled_content_btop{
    margin-top: 10rpx;
}
.settled_content_b .settled_content_name {
    font-size: 26rpx;
    color: #ababab;
    line-height: 26rpx;
    padding: 35rpx 0 80rpx;
}

.weui-uploader {
    overflow: hidden;
}

.weui-uploader__info {
    color: #b2b2b2;
}

.weui-uploader__input-box {
    position: relative;
    background: #f8f8f8;
    float: left;
    margin-right: 9rpx;
    margin-bottom: 9rpx;
    font-size: 24rpx;
    color: #bababa;
    width: 202rpx;
    height: 151rpx;
    border: 1px dashed #c5c5c5;
}

.weui-uploader__input image {
    margin-top: 28rpx;
    margin-bottom: 28rpx;
    width: 53rpx;
    height: 46rpx;
}

