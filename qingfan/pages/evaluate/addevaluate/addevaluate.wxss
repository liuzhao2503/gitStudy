/* pages/evaluate/addevaluate/addevaluate.wxss */
page,.addevaluate_box{
    height: 100%;
    position: relative;
}
.addevaluate_box{
    box-sizing: border-box;
    padding-top: 20rpx;
}
.addevaluate_top{
    margin: 0 20rpx;
}
.addevaluate_top_fen{
    height: 57rpx;
    line-height: 57rpx;
    background: #fff;
    padding: 28rpx 21rpx 19rpx;
    border-bottom: 1rpx solid #f4f4f4;
}
.addevaluate_top_fen_star{
    display: inline-block;
    vertical-align: middle;
    margin: 0 10rpx;
    line-height: 57rpx;
}
.addevaluate_top_zfen{
    line-height: 57rpx;
    vertical-align: middle;
    display: inline-block;
    font-size: 28rpx;
    color: #3a3a3a;
}
.addevaluate_top_fen_star .icon-star{
    display: inline-block;
    color: #c0c0c0;
    font-size: 57rpx;
    padding: 0 12rpx;
}
.addevaluate_top_text{
    background: #fff;
    padding: 19rpx;
}
.addevaluate_top_text textarea{
    width: 100%;
    height: 240rpx;
    font-size: 24rpx;
    color: #999999;
}

.settled_content_input {
    font-size: 26rpx;
    color: #595959;
    display: block;
    background: #fff;
    margin-top: 16rpx;
    padding: 20rpx; 
}
.weui-uploader {
    overflow: hidden;
}

.weui-uploader__info {
    color: #b2b2b2;
}

.weui-uploader__input-box {
    position: relative;
    background: #f8f8f8;
    float: left;
    margin-right: 9rpx;
    margin-bottom: 9rpx;
    font-size: 24rpx;
    color: #bababa;
    width: 160rpx;
    height: 160rpx;
    border: 1px dashed #c5c5c5;
}

.weui-uploader__input image {
    margin-top: 28rpx;
    margin-bottom: 28rpx;
    width: 53rpx;
    height: 46rpx;
}
.weui-uploader__img {
    display: block;
    width: 160rpx;
    height: 160rpx;
}

.weui-uploader__file {
    float: left;
    margin-right: 9px;
    margin-bottom: 5px;
}

.weui-uploader__input {
    text-align: center;
    position: absolute;
    z-index: 1;
    padding-top: 20rpx;
    box-sizing: border-box;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    opacity: 1;
}
.weui-uploader__input .icon-camera{
    font-size: 66rpx;
}
.addevaluate_topbottom{
    text-align: right;
    font-size: 24rpx;
    color: #b8b8b8;
}
.addevaluate_topbottom text{
    color: #951224;
    padding: 0 3rpx;
} 
.addevaluate_bottombtn{
    position: absolute;
    bottom: 100rpx;
    left: 10%;
    width: 80%;
    background: #951224;
    color: #fff;
    font-size: 34rpx;
    border-radius: 50rpx;
}
.addevaluate_top_fen_star .icon-star.active{
    color: #d33232;
}
.addevaluate_top_fen_star .index_content_starw{
    background: -webkit-linear-gradient(0deg, #d33232, #d33232 50%, #c0c0c0 0%, #c0c0c0),
                linear-gradient(90deg, #d33232, #d33232 50%, #c0c0c0 0%, #c0c0c0);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
}