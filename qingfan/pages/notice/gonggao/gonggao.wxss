/* pages/gongao/gonggao.wxss */
Page{background: #f7f7f7;}
.list_item{
	width: 94.667%;
	height: 200rpx;
	margin: 20rpx auto 0;
	background: #fff;
	position: relative;
}
.gonggaolist_wu{
    padding-top: 50rpx;
    text-align: center;
    color: #999;
    font-size: 28rpx;
}
.text{
	box-sizing: border-box;
	width: 73.33%;
	height: 200rpx;
	padding: 0 10rpx 0 20rpx;
}
.text_title{
	display: inline-block;
	max-width: 100%;
	font-size: 28rpx;
	color: #3a3a3a;
	line-height: 56rpx;
	text-overflow: ellipsis;
	white-space: nowrap;
	overflow: hidden;
	margin-bottom: 10rpx;
}
.text_value{
	font-size: 26rpx;
	color: #6a6a6a;
	overflow: hidden;
	text-overflow: ellipsis;
	display: -webkit-box;
	-webkit-line-clamp: 3;
	-webkit-box-orient: vertical;
}
.img{
	width: 24.33%;
	height: 200rpx;
	position: absolute;
	right: 0;top: 0;
	text-align: center;
}
.date{
	display: inline-block;
	max-width: 100%;
	font-size: 24rpx;
	color: #b8b8b8;
	text-overflow: ellipsis;
	white-space: nowrap;
	overflow: hidden;
}
.img_photo{
	width: 120rpx;
	height: 110rpx;
	margin-top: 16rpx;
}