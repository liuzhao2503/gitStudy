/* pages/add_address/add_address.wxss */
page,view,text,textarea{
  box-sizing: border-box;
}
page{
  width: 100%;
  background-color: #f7f7f7;
  height: 100%;
  padding-top:20rpx; 
}
.edit_address{
  width: 100%;
  background-color: #fff;
}
.change_address_msg_list{
  width: 100%;
  padding:0 58rpx;
  position: relative;
  min-height: 100rpx;
  overflow: hidden;
}
.change_address_msg_list_label{
  position: absolute;
  left: 58rpx;
  top: 0;
  line-height:100rpx;
  font-size: 30rpx;
  color: #595959;
}
.change_address_msg_list_input{
  width: 100%;
  box-sizing: border-box;
  padding-left:121rpx;
  font-size: 30rpx;
  color: #595959;
  line-height: 100rpx;
  height: 100rpx;
}
.change_address_msg_list_pickerbox{
  width: 100%;
  height: 100%;
}
.change_address_msg_list_place{
  color: #d6d6d6;
  line-height:100rpx;
}
.edit_address_set_default{
  display: inline-block;
  margin-top:31rpx;
  padding:0 57rpx;
}
.change_address_set_default_icon{
  font-size: 26rpx;
}
.change_address_set_text{
  font-size: 26rpx;
  margin-left: 16rpx;
  display: inline-block;
  line-height: 83rpx;
}
.change_address_set_text_noact{
  color: #595959;
}
.change_address_set_text_act{
  color: #b90707;
}
.button_big_submit{
  width:690rpx;
  height: 95rpx;
  background-color: #ff740e;
  color: #fff;
  border-radius: 27rpx;
  font-size: 36rpx;
  line-height:95rpx;
}
.change_address_submit_btn{
  margin-top: 98rpx;
}

.change_address_msg_list_textarea{
    height: 300rpx;
    line-height:2em;
    margin-top: 22rpx;
}