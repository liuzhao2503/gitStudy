/* pages/recharge_success/recharge_success.wxss */
page{
  width:100%;
  background-color: #f7f7f7;
}
view,text{
  box-sizing: border-box;
}
.recharge_success{
  background-color: #ffffff;
  overflow: hidden;
  display: block;
}
.recharge_success_image{
  width:273rpx;
  height: 273rpx;
  display: block;
  margin:60rpx auto 30rpx;
}
.recharge_success_text{
  display: inline-block;
  width:100%;
  color: #ff740e;
  font-size: 36rpx;
  text-align: center;
  margin-bottom:92rpx;
}
.recharge_success_price{
  text-align: center;
  width:100%;
  font-size: 82rpx;
  margin-bottom:100rpx;
}
.recharge_success_decimal{
  font-size: 46rpx;
  margin-left:-20rpx;
}
.recharge_success_pay_type{
  width: 100%;
  height: 100rpx;
  padding:0 50rpx;
  border-top: solid 2px #f7f7f7;
  position: relative;
}
.recharge_success_pay_type_label{
  position: absolute;
  font-size: 30rpx;
  color: #e7e7e7;
  left:50rpx;
  top: 0;
  line-height:100rpx;
}
.recharge_success_pay_type_text{
  width:100%;
  font-size: 30rpx;
  padding-left:181rpx;
  line-height:100rpx;
}
.recharge_success_pay_type_num{
  position: absolute;
  right:50rpx;
  top: 0;
  line-height:100rpx;
}