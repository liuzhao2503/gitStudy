/* pages/shop/shoplsit.wxss */
.shoplist_top{
    position: fixed;
    top: 0;
    left: 0; 
    width: 100%;
    z-index: 10;
    display: flex;
    height: 71rpx;
    line-height: 71rpx;
    background: #fff;
}
.shoplist_top_list{
    text-align: center;
    font-size: 27rpx;
    color: #555555;
    flex: 1;
}
.shoplist_top_list.active{
    color: #ee2e64;
    position: relative;
}
.shoplist_top_list.active:after{
    content: "";
    position: absolute;
    left: 26%;
    bottom: 0;
    width: 48%;
    border-bottom: 2rpx solid #ee2e64;

}
.shoplist_top_listxl{
    display: inline-block;
    vertical-align: middle;
    margin-left: 5rpx;
    width: 18rpx;
	height: 13rpx;
}
.shoplist_list_all{
    padding: 81rpx 15rpx 0;
}
.shoplist_list{
    padding-bottom: 10rpx;
    display: inline-block;
    width: 50%;
}
.shoplist_list_z{
    position: relative;
    margin: 0 5rpx;
    padding: 10rpx 10rpx 21rpx;
    background: #fff;
}
.shoplist_list .shoplist_list_zimg{
    width: 100%;
	height: 202rpx;
}
.shoplist_list .shoplist_list_zname{
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    line-height: 38rpx;
    font-size: 26rpx;
    overflow: hidden;
    color: #666666;
    margin: 0 13rpx;
}
.shoplist_list .shoplist_list_zbottom{
    margin-top: 38rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
    line-height: 32rpx;
}
.shoplist_list_zbottom .shoplist_list_zPrice{
    font-size: 32rpx;
    color: #cb0c0c;
}
.shoplist_list_zbottom .shoplist_list_zpeople{
    font-size: 25rpx;
    color: #ababab;
}
.shoplist_classification{
    opacity: 1;
    left:100%; 
    position: fixed;
    width: 100%;
    height: 100%;
    top: 0; 
}
.shoplist_classmask{
    position: absolute;
    top:0;
    left: 0;
    height: 100%;
    z-index: 10;
    width: 100%;
    background: rgba(000, 000, 000, 0);
    transition: all .7s;
    -moz-transition: all .7s; /* Firefox 4 */
    -webkit-transition: all .7s; /* Safari 和 Chrome */
    -o-transition: all .7s; /* Opera */
}
.shop_list_ppai{
    position: absolute;
    top: 17rpx;
    right: 18rpx;
    background: #ee2e64;
    font-size: 24rpx;
    color: #fff;
    text-align: center;
    line-height: 63rpx;
    border-radius: 50%;
    width: 63rpx;
	height: 63rpx;
}
/* .shoplist_classlsit_z_border{
    border-top: 20rpx solid #f7f7f7;
} */
.shoplist_classlsit{
    padding-top: 20rpx;
    display: flex;
    flex-direction:column;
    background: #f7f7f7;
    position: absolute;
    opacity: 0;
    z-index: 11;
    top:0;
    right: -100%;
    height: 100%;
    width: 70%;
    transition: all .3s;
    -moz-transition: all .3s; /* Firefox 4 */
    -webkit-transition: all .3s; /* Safari 和 Chrome */
    -o-transition: all .3s; /* Opera */
}
.shoplist_classification.active{
    z-index: 100;
    opacity: 1;
    left: 0;
}
.shoplist_classification.active .shoplist_classmask{
    background: rgba(000, 000, 000, 0.7);
}
.shoplist_classification.active .shoplist_classlsit{
    opacity: 1;
    right: 0;
}
.shoplist_classlsit_top{
    padding:0 40rpx;    
    background: #fff;
}
.shoplist_classlsit_top text{
    font-size: 27rpx;
    height: 73rpx;
    line-height: 73rpx;
    color: #555555;
}
.shoplist_classlsit_content_list_z{
    margin-top: 20rpx;
    display: inline-block;
    font-size: 26rpx;
    border-radius: 8rpx;
    color: #555555;
    height: 47rpx;
    background: #fff;
    line-height: 47rpx;
    padding: 0 23rpx;
    border: 1px solid #e0e0e0;
    margin-right: 20rpx;
}
.shoplist_classlsit_content_list_z.active{
    background: #ff740e;
    color: #ffffff;
    border:1px solid #ff740e;
}
.shoplist_classlsit_z{
    border-bottom: 4rpx solid #f7f7f7;
}
.shoplist_classlistimg{
    margin-right: 18rpx;
    display: inline-block;
    vertical-align: middle;
    width: 27rpx;
    height: 27rpx;
}
.shoplist_classlsit_content_listall{
    padding: 0 30rpx 50rpx 40rpx;
    background: #fff;
}
.shoplist_class_bottom{
    position: absolute;
    bottom: 20rpx;
    left: 0;
    width: 90%;
    background: #fff;
    padding: 20rpx 5%;
}
.shoplist_class_bottom button{
    font-size: 34rpx;
    background: #ff740e;
    color: #fff;
}
.shoplist_classlsit_z:last-child{
    padding-bottom: 140rpx;
}